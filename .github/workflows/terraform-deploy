name: Provision AWS Infrastructure with Terraform

on:
  workflow_dispatch:  # lo puedes ejecutar manualmente desde la pesta침a "Actions"

jobs:
  terraform:
    name: Terraform Provision
    runs-on: ubuntu-latest

    defaults:
      run:
        working-directory: ./terraform-ec2-project  # 游빐 Ajusta si tu carpeta se llama diferente

    steps:
    - name: 游닌 Checkout c칩digo
      uses: actions/checkout@v3

    - name: 游댏 Configurar credenciales AWS
      uses: aws-actions/configure-aws-credentials@v2
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: us-east-1

    - name: 丘뙖잺 Instalar Terraform
      uses: hashicorp/setup-terraform@v2
      with:
        terraform_version: 1.5.7

    - name: 游닍 Inicializar Terraform
      run: terraform init

    - name: 游늶 Validar configuraci칩n
      run: terraform validate

    - name: 游댍 Previsualizar cambios
      run: terraform plan

    - name: 游 Aplicar infraestructura
      run: terraform apply -auto-approve

    - name: 游깷 Mostrar IP p칰blica EC2
      run: terraform output ec2_public_ip
